<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring-2.13.2.xsd ">

	<camel:template id="producerTemplate" camelContextId="quoteContext"/>
	
	<camelContext id="quoteContext" xmlns="http://camel.apache.org/schema/spring" trace="false" allowUseOriginalMessage="false">
		<camel:endpoint id="messageContext.messageRequest" uri="${com.iamvtn.activemq.queue.request}" />
		<camel:endpoint id="messageContext.messageResponse" uri="${com.iamvtn.activemq.queue.response}" />
    	
    	<route>
	      <camel:from uri="messageContext.messageRequest" />
	      <camel:process ref="messageProcessor"/>
	      <camel:to ref="messageContext.messageResponse" />
    	</route>
		
	</camelContext>
	
</beans>